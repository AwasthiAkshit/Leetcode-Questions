import java.util.*;

class Solution {
    public int[] numberGame(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;
        int[] arr = new int[n];

        for (int i = 0; i < n; i += 2) {
            arr[i] = nums[i + 1];   // Bob
            arr[i + 1] = nums[i];   // Alice
        }

        return arr;
    }
}
