class Solution {
    public static int minCost(int[] arr) {
        // code here
         PriorityQueue<Integer> p = new PriorityQueue<>();
         int sum = 0;
         for(int i=0;i<arr.length;i++){
             p.add(arr[i]);
         }
         while(p.size()>1){
             int n1 = p.remove();
             int n2 = p.remove();
             int total = n1+n2;
             p.add(total);
             sum = sum+total;
             
         }
         return sum;
    }
}
