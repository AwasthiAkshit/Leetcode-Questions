/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    private boolean find(TreeNode root, int tg, int sum) {
        if (root == null)
            return false;
        sum = sum + root.val;
        if (root.left == null && root.right == null) {
            if (sum == tg)
                return true;
        }
        if (find(root.left, tg, sum))
            return true;
        if (find(root.right, tg, sum))
            return true;
        return false;
    }

    public boolean hasPathSum(TreeNode root, int targetSum) {
        if (root == null)
            return false;
        return find(root, targetSum, 0);
    }
}
