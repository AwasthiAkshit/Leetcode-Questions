//7ms code:
class Solution {
    public boolean searchMatrix(int[][] mat, int target) {
        int m = mat.length;
        int n = mat[0].length;
        int row = n - 1;

        for (int i = 0; i < m; i++) {
            if (target == mat[i][row]) {
                return true;
            } else if (target < mat[i][row]) {
                for (int j = 0; j < row; j++) {
                    if (target == mat[i][j]) {
                        return true;
                    }
                }
            }
        }
        return false;
    }
}
