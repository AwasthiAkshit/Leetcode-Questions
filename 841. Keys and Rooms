class Solution {
    public boolean canVisitAllRooms(List<List<Integer>> rooms) {
        int n = rooms.size();
        boolean[] vis = new boolean[n];
        Queue<Integer> q = new LinkedList<>();
        q.add(0);
        vis[0] = true;
        while (q.size() > 0) {
            int top = q.remove();
            for (int j = 0; j < rooms.get(top).size(); j++) {
                if (vis[rooms.get(top).get(j)] == false) {
                    q.add(rooms.get(top).get(j));
                    vis[rooms.get(top).get(j)] = true;
                }
            }

        }
        for (int i = 0; i < n; i++) {
            if (vis[i] == false)
                return false;
        }
        return true;

    }
}
