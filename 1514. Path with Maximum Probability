class Solution {
    class Pair{
        int node;
        double p;
        Pair(int node,double p){
            this.node = node;
            this.p = p;
        }
    }
    public double maxProbability(int n, int[][] edges, double[] succProb, int start_node, int end_node) {
        double[] prob = new double[n];
        ArrayList<ArrayList<Pair>> adj = new ArrayList<>();
        for(int i=0;i<n;i++){
            adj.add(new ArrayList<>());
        }
        for(int i=0;i<edges.length;i++){
            int u = edges[i][0];
            int v = edges[i][1];
            double wt = succProb[i];
            adj.get(u).add(new Pair(v,wt));
            adj.get(v).add(new Pair(u,wt));
        }
        for(int i=0;i<n;i++){
            prob[i] = 0;
        }
        prob[start_node] = 1;

        PriorityQueue<Pair> h = new PriorityQueue<>((a,b)->Double.compare(b.p, a.p));
        h.add(new Pair(start_node,1));
        while(h.size()>0){
            Pair top = h.remove();
            if(top.p<prob[top.node]) continue;
            for(int i=0;i<adj.get(top.node).size();i++){
                int node = adj.get(top.node).get(i).node;
                double pr = adj.get(top.node).get(i).p;
                double total = top.p*pr;
                if(total>prob[node]){
                    prob[node] = total;
                    h.add(new Pair(node,total));
                }
            }
        }
        return prob[end_node];

    }
}
