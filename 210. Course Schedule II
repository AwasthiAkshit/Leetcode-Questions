class Solution {
    public int[] findOrder(int V, int[][] edges) {
        int[] in = new int[V];
        int[] ans = new int[V];
        Queue<Integer> q = new LinkedList<>();
        ArrayList<ArrayList<Integer>> adj = new ArrayList<>();
        for (int i = 0; i < edges.length; i++) {
            in[edges[i][0]]++;
        }
        for (int i = 0; i < V; i++) {
            adj.add(new ArrayList<>());
        }
        for (int i = 0; i < edges.length; i++) {
            int u = edges[i][1];
            int v = edges[i][0];
            adj.get(u).add(v);
        }

        for (int i = 0; i < V; i++) {
            if (in[i] == 0)
                q.add(i);
        }
        int idx = 0;
        while (q.size() > 0) {
            int top = q.remove();
            ans[idx++] = top;
            for (int i = 0; i < adj.get(top).size(); i++) {
                if (--in[adj.get(top).get(i)] == 0)
                    q.add(adj.get(top).get(i));
            }
        }

        if (idx == V)  return ans;
        return new int[0];
    }
}
