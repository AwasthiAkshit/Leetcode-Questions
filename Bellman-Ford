// User function Template for Java

class Solution {
    public int[] bellmanFord(int n, int[][] times, int k) {
        // code here
         int[] ans = new int[n];
        for(int i=0;i<n;i++){
            ans[i] = 10*10*10*10*10*10*10*10;
        }
            ans[k] = 0;
            for(int i=0;i<n-1;i++){
                for(int j=0;j<times.length;j++){
                    if(ans[times[j][0]]!= 10*10*10*10*10*10*10*10){
                        int dis = ans[times[j][0]]+times[j][2];
                        if(dis<ans[times[j][1]]) ans[times[j][1]] = dis;
                    }
                }
            }
            for(int i=0;i<times.length;i++){
                if(ans[times[i][0]]!= 10*10*10*10*10*10*10*10){
                        int dis = ans[times[i][0]]+times[i][2];
                        if(dis<ans[times[i][1]]){
                            int[] temp = new int[1];
                            temp[0] = -1;
                            return temp;
                        }
                    }
            }
            return ans;
          
    }
}
