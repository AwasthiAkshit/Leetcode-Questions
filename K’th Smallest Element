class Solution {
    public int kthSmallest(int[] arr, int k) {
        // Code here
        PriorityQueue<Integer> p = new PriorityQueue<>(Collections.reverseOrder());
        int n = arr.length;
        for(int i=0;i<n;i++){
            p.add(arr[i]);
            if(p.size()>k) p.remove();
        }
       
        return p.peek();
    }
}
