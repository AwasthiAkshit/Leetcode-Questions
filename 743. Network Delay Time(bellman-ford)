class Solution {
    public int networkDelayTime(int[][] times, int n, int k) {
        int[] ans = new int[n+1];
        for(int i=0;i<n+1;i++){
            ans[i] = Integer.MAX_VALUE;
        }
            ans[k] = 0;
            for(int i=0;i<n-1;i++){
                for(int j=0;j<times.length;j++){
                    if(ans[times[j][0]]!=Integer.MAX_VALUE){
                        int dis = ans[times[j][0]]+times[j][2];
                        if(dis<ans[times[j][1]]) ans[times[j][1]] = dis;
                    }
                }
            }
            for(int i=1;i<n+1;i++){
                if(ans[i]==Integer.MAX_VALUE) return -1;
            }
            int max = Integer.MIN_VALUE;
            for(int i=1;i<n+1;i++){
                if(ans[i]>max) max = ans[i];

            }
            return max;
        }
    }
