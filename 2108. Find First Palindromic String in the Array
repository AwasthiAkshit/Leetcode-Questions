class Solution {
    private boolean pallindrom(String str) {
        int n = str.length();
        int i = 0;
        int j = n - 1;
        while (i <= j) {
            if (str.charAt(i) != str.charAt(j))
                return false;
            i++;
            j--;
        }
        return true;
    }

    public String firstPalindrome(String[] words) {
        int n = words.length;
        for (int i = 0; i < n; i++) {
            if (pallindrom(words[i]))
                return words[i];
        }
        return "";
    }
}
