class Solution {
    public int countPrimes(int n) {
        if (n == 0 || n == 1 || n == 2)
            return 0;
        boolean[] arr = new boolean[n + 1];
        for (int i = 0; i < n + 1; i++) {
            arr[i] = true;
        }
        arr[0] = false;
        arr[1] = false;
        for (int i = 2; i * i <= n; i++) {
            if (arr[i]) {
                for (int j = i * i; j <= n; j = j + i) {
                    arr[j] = false;
                }
            }
        }
        int count = 0;
        for (int i = 0; i < n; i++) {
            if (arr[i])
                count++;

        }
        return count;

    }
}
