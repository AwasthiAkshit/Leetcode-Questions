class Solution {
    private int minCost(int i,int[]cost,int[]dp){
        if(i==cost.length-1||i==cost.length-2) return cost[i];
        if(dp[i]!=-1) return dp[i];
        dp[i] = cost[i]+Math.min(minCost(i+1,cost,dp),minCost(i+2,cost,dp));
        return dp[i];
    }
    public int minCostClimbingStairs(int[] cost) {
        int n = cost.length;
        int[] dp = new int[n];
        for(int i=0;i<dp.length;i++){
            dp[i]=-1;
        }
        return Math.min(minCost(0,cost,dp),minCost(1,cost,dp));
    }
}
