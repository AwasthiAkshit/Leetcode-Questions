class Solution {
    private void dfs(int r, int c, char[][] grid, int m, int n) {
        grid[r][c] = '0';
       if(c<m-1&&grid[r][c+1]=='1'){
        dfs(r,c+1,grid,m,n);
       }
       if(r<n-1&&grid[r+1][c]=='1'){
        dfs(r+1,c,grid,m,n);
       }
       if(c>0&&grid[r][c-1]=='1'){
        dfs(r,c-1,grid,m,n);
       }
       if(r>0&&grid[r-1][c]=='1'){
        dfs(r-1,c,grid,m,n);
       }
       
    }

    public int numIslands(char[][] grid) {
        int n = grid.length;
        int m = grid[0].length;
        int count = 0;
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (grid[i][j] == '1') {
                    dfs(i, j, grid, m, n);
                    count++;
                }
            }

        }
        return count;
    }
}
