class Solution {
    public int[] twoSum(int[] numbers, int target) {
        int[] arr = new int[2];
        int n = numbers.length;
        int l = 0;
        int h = n - 1;
        while (l <= h) {
            int ans = numbers[l] + numbers[h];
            if (ans == target) {
                arr[0] = l + 1;
                arr[1] = h + 1;
                return arr;
            } else if (ans > target)
                h--;
            else
                l++;
        }
        return arr;
    }
}
