class Solution {
    public int maxAmt(int[]nums,int i,int[]dp){

        if(i>=nums.length) return 0;
        if(dp[i]!=-1) return dp[i];
        int take = nums[i] + maxAmt(nums,i+2,dp);
        int skip = maxAmt(nums,i+1,dp);
        dp[i] = Math.max(take,skip);
        return dp[i];


        
    }
    public int rob(int[] nums) {
        int n = nums.length;
        int[] dp = new int[n];
        for(int i=0;i<n;i++){
            dp[i] = -1;
        }
        if(nums.length==1) return nums[0];
        return maxAmt(nums,0,dp);
    }
}
