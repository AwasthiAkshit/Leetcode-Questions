class Solution {
    public void nearlySorted(int[] arr, int k) {
        // code here
        PriorityQueue<Integer> p = new PriorityQueue<>();
    int c = 0;
    for(int i=0;i<arr.length;i++){
        p.add(arr[i]);
        if(p.size()>k) arr[c++] = p.remove();
    }
    while(p.size()>0){
        arr[c++] = p.remove();
    }
    }
}
