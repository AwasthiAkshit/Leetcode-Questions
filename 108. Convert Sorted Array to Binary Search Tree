class Solution {
    private TreeNode build(int[] nums, int left, int right) {
        if (left > right) return null;        // subarray empty → no node

        int mid = left + (right - left) / 2;  // pick middle index
        TreeNode root = new TreeNode(nums[mid]);

        root.left = build(nums, left, mid - 1);   // left half → left subtree
        root.right = build(nums, mid + 1, right); // right half → right subtree

        return root;   
    }

    public TreeNode sortedArrayToBST(int[] nums) {
        return build(nums, 0, nums.length - 1);
    }
}
