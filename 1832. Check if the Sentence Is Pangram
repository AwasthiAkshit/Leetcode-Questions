class Solution {
    public boolean checkIfPangram(String sentence) {
        int n = sentence.length();
        int[] arr = new int[26];
        for (int i = 0; i < n; i++) {
            int ch = (int) sentence.charAt(i);
            arr[ch - 97] = 1;
        }
        for (int i = 0; i < 26; i++) {
            if (arr[i] == 0)
                return false;
        }
        return true;
    }
}
