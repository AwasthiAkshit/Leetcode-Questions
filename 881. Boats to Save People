class Solution {
    public int numRescueBoats(int[] people, int limit) {
        int n = people.length;
        Arrays.sort(people);
        int i=0;
        int j=n-1;
        int count = 0;
        while(i<=j){
            if(i==j){
                count++;
                j--;
            }
            else if(limit-people[j]>=people[i]){
                i++;
                j--;
                count++;
            }
           
            else{
                j--;
                count++;
            }
           
        }
        return count;

    }
}
