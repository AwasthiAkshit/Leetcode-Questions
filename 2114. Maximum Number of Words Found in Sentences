class Solution {
    public int mostWordsFound(String[] sentences) {
        int n = sentences.length;
        StringBuilder sb = new StringBuilder("");
        for (int i = 0; i < n; i++) {
            sb.append(sentences[i]).append('-');
        }
        int l = sb.length();
        int maxCount = 0;
        int count = 1;
        for (int i = 0; i < l; i++) {
            if (sb.charAt(i) == ' ')
                count++;
            if (sb.charAt(i) == '-') {
                if (count > maxCount) {
                    maxCount = count;
                }
                count = 1;
            }

        }
        return maxCount;
    }
}
