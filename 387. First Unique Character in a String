class Solution {
    public int firstUniqChar(String s) {
        String str = s.toLowerCase();
        if (s.length() == 1)
            return 0;
        int n = str.length();
        int[] freq = new int[26];
        for (int i = 0; i < n; i++) {
            int ascii = (int) str.charAt(i);
            freq[ascii - 97]++;

        }
        for (int i = 0; i < n; i++) {
            int ascii = (int) str.charAt(i);
            if (freq[ascii - 97] == 1)
                return i;
        }

        return -1;

    }
}
