class Solution {
    public int maximumNumberOfStringPairs(String[] words) {
        HashSet<String> set = new HashSet<>();
        int n = words.length;
        int count = 0;
        for (int i = 0; i < n; i++) {
            String ch = words[i];
            StringBuilder sb = new StringBuilder(ch);
            sb.reverse();
            String rev = sb.toString();
            if (set.contains(rev)) {
                count++;
            } else {
                set.add(ch);
            }
        }
        return count;

    }
}
