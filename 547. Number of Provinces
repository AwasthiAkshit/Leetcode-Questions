class Solution {
    private void bfs(int i, boolean[] vis, int[][] adj, int n) {
        vis[i] = true;
        Queue<Integer> q = new LinkedList<>();
        q.add(i);
        while (q.size() > 0) {
            int top = q.remove();
            for (int j = 0; j < n; j++) {
                if (adj[top][j] == 1 && vis[j] == false) {
                    q.add(j);
                    vis[j] = true;
                }
            }

        }
    }

    public int findCircleNum(int[][] adj) {
        int count = 0;
        int n = adj.length;
        boolean[] vis = new boolean[n];
        for (int i = 0; i < n; i++) {
            if (vis[i] == false) {
                bfs(i, vis, adj, n);
                count++;
            }

        }
        return count;
    }
}
